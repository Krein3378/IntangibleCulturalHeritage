<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="2.5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="2.5dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/main_found_page_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_found_page_item_image"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pic_main_item" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/main_found_page_item_header"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/pic_main_item"
                app:civ_border_color="?attr/colorTextLight"
                app:civ_border_width="1dp" />

        </FrameLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/main_found_page_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:alpha="0.7"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="李四"
            android:textColor="?attr/colorText"
            android:textSize="14sp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/main_found_page_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:alpha="0.6"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="最美非物质文化遗产"
            android:textColor="?attr/colorText"
            android:textSize="12sp" />


        <Button
            android:id="@+id/main_found_page_item_attention"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="?attr/colorPrimary"
            android:stateListAnimator="@null"
            android:text="@string/main_found_attention"
            android:textColor="?attr/colorTextLight" />
    </LinearLayout>
</androidx.cardview.widget.CardView>